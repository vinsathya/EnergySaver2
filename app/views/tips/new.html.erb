<h1>New Tip</h1>

<%= form_tag(tips_url, method: 'post') do %>
  <div>
    <%= label_tag :user_id %><br />
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name), class: 'form-control' %>
  </div>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_area_tag :description %>
  </div>

  <div>
    <%= label_tag :room %><br />
    <%= text_field_tag :room %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= number_field_tag :price %>
  </div>

  <div>
    <%= label_tag :savings %><br />
    <%= number_field_tag :savings %>
  </div>

  <div>
    <%= submit_tag "Create Tip" %>
  </div>
<% end %>
