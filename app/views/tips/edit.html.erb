<h1>Editing Tip #<%= @tip.id %></h1>

<%= form_tag(tip_url(@tip), method: 'patch') do %>
  <div>
    <%= label_tag :user_id %><br />
    <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name, @tip.user_id), class: 'form-control' %>
  </div>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @tip.title %>
  </div>

  <div>
    <%= label_tag :description %><br />
    <%= text_area_tag :description, @tip.description %>
  </div>

  <div>
    <%= label_tag :room %><br />
    <%= text_field_tag :room, @tip.room %>
  </div>

  <div>
    <%= label_tag :price %><br />
    <%= number_field_tag :price, @tip.price %>
  </div>

  <div>
    <%= label_tag :savings %><br />
    <%= number_field_tag :savings, @tip.savings %>
  </div>

  <div>
    <%= submit_tag "Update Tip" %>
  </div>
<% end %>
